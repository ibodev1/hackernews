{
  "lock": false,
  "tasks": {
    "dev": "deno run --allow-all --watch main.ts",
    "check": "deno check **/*.ts"
  },
  "fmt": {
    "semiColons": true,
    "singleQuote": true,
    "lineWidth": 160
  },
  "compilerOptions": {
    "strict": true
  },
  "lint": {
    "rules": {
      "exclude": ["no-explicit-any"]
    }
  },
  "imports": {
    "@hono/zod-validator": "npm:@hono/zod-validator@^0.4.1",
    "hono": "npm:hono",
    "zod": "npm:zod",
    "@kitsonk/xhr": "jsr:@kitsonk/xhr@^0.5.0",
    "firebase/": "https://cdn.skypack.dev/firebase@8/",
    "virtualstorage": "https://deno.land/x/virtualstorage@0.1.0/mod.ts"
  }
}
